model Form {
  id          String    @id @default(cuid())
  address     String
  contract    String
  method      String
  title       String
  description String
  fields      Field[]
  // creator     User      @relation(fields: [userId], references: [id])
  // userId      String
  createdAt   DateTime
  updatedAt   DateTime
}

model Field {
  id          String    @id @default(cuid())
  form        Form      @relation(fields: [formId], references: [id])
  formId      String
  type        String
  name        String
  title       String
  description String
}
